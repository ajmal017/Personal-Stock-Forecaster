<%= form_for(@share) do |f| %>
    <% if @share.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@share.errors.count, "error") %> prohibited this share from being added to portfolio:</h2>

          <ul>
            <% @share.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label "Stock ID" %><br />
      <%= collection_select(:share, :stock_id, @stocks, :id, :name) %>
    </div>
    <div class="field">
      <%= f.label "Purchasing Date" %><br />
      <%= f.date_select :date_of_purchase, {:start_year => Time.now.year, :end_year => Time.now.year-100, :include_blank => true, :order => [:day, :month, :year]} %>
    </div>
    <div class="field">
      <%= f.label "Selling Date" %><br />
      <%= f.date_select :date_of_sale, {:start_year => Time.now.year, :end_year => Time.now.year-100, :include_blank => true, :order => [:day, :month, :year]} %>
    </div>
    <div class="field">
      <%= f.label :volume %><br/>
      <%= f.text_field :volume %>
    </div>
    <div class="actions">
      <%= f.submit nil, class: "btn btn-primary"%>
    </div>
<% end %>